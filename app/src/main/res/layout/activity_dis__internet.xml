<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    android:gravity="center"
    tools:context=".Activity.Dis_Internet">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:srcCompat="?attr/actionModeCloseDrawable" />


    <TextView
        android:fontFamily="@font/iransans"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#747475"
        android:textSize="17dp"
        android:textStyle="bold"
        android:text="  خطا در اتصال به اینترنت !  "/>


    <TextView
        android:id="@+id/Txt_Dis_Internet"
        android:drawableRight="@drawable/phone"
        android:fontFamily="@font/iransans"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="27dp"
        android:textColor="#747475"
        android:textSize="15dp"
        android:textStyle="bold"
        android:text=" بررسی تنظیمات شبکه"/>

    <Button
    android:id="@+id/Btn_Dis_Internet"
    android:fontFamily="@font/iransans"
    android:textColor="#fff"
    android:background="@color/red_activity_Dis_button"
    android:layout_marginTop="50dp"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:text="تلاش مجدد"/>


    <Button
        android:id="@+id/Btn_Dis_Internet_refresh"
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="آزمایشی"/>


</LinearLayout>