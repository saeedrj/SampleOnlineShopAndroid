<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.MainActivity"
   android:scrollbars="none"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">





            <com.daimajia.slider.library.SliderLayout
                android:id="@+id/slider"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginBottom="10dp"
                android:background="@color/color_blue_white_DAKHEL" />

            <HorizontalScrollView
                android:scrollbars="none"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:fontFamily="@font/iransans"
                        android:textColor="#fff"
                        android:layout_marginRight="12dp"
                        android:padding="7dp"
                        android:textSize="16dp"
                        android:background="@drawable/menu_item_noradius"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="خوردنی و آشامیدنی"/>
                    <TextView
                        android:fontFamily="@font/iransans"
                        android:textColor="#fff"
                        android:layout_marginRight="12dp"
                        android:padding="7dp"
                        android:textSize="16dp"
                        android:background="@drawable/menu_item_noradius"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ورزش و سفر"/>
                    <TextView
                        android:fontFamily="@font/iransans"
                        android:textColor="#fff"
                        android:layout_marginRight="12dp"
                        android:padding="7dp"
                        android:textSize="16dp"
                        android:background="@drawable/menu_item_noradius"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="اسباب بازی و کودک و نوزاد"/>
                    <TextView
                        android:fontFamily="@font/iransans"
                        android:textColor="#fff"
                        android:layout_marginRight="12dp"
                        android:padding="7dp"
                        android:textSize="16dp"
                        android:background="@drawable/menu_item_noradius"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="کتاب و لوازم تحریر و هنر"/>
                    <TextView
                        android:fontFamily="@font/iransans"
                        android:textColor="#fff"
                        android:layout_marginRight="12dp"
                        android:padding="7dp"
                        android:textSize="16dp"
                        android:background="@drawable/menu_item_noradius"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="خانه و آشپزخانه"/>
                    <TextView
                        android:fontFamily="@fonts/iransans"
                        android:textColor="#fff"
                        android:layout_marginRight="12dp"
                        android:padding="7dp"
                        android:textSize="16dp"
                        android:background="@drawable/menu_item_noradius"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="خانه و اشپزخانه"/>
                    <TextView
                        android:fontFamily="@font/iransans"
                        android:textColor="#fff"
                        android:layout_marginRight="12dp"
                        android:padding="7dp"
                        android:textSize="16dp"
                        android:background="@drawable/menu_item_noradius"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="مد و پوشاک"/>
                    <TextView
                        android:fontFamily="@font/iransans"
                        android:textColor="#fff"
                        android:layout_marginRight="12dp"
                        android:padding="7dp"
                        android:textSize="16dp"
                        android:background="@drawable/menu_item_noradius"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="خودرو ابزار اداری"/>
                    <TextView
                        android:fontFamily="@font/iransans"
                        android:textColor="#fff"
                        android:layout_marginRight="12dp"
                        android:padding="7dp"
                        android:textSize="16dp"
                        android:background="@drawable/menu_item_noradius"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="آرایشی بهداشتی و سلامت"/>

                    <TextView
                        android:fontFamily="@font/iransans"
                        android:textColor="#fff"
                        android:layout_marginRight="12dp"
                        android:padding="7dp"
                        android:textSize="16dp"
                        android:background="@drawable/menu_item_noradius"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="کالای دیجیتال"/>

                </LinearLayout>

            </HorizontalScrollView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <TextView
                            android:fontFamily="@font/iransans"
                            android:id="@+id/Timer_hour"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="3dp"
                            android:text="00"
                            android:textSize="22dp"
                            android:textStyle="bold" />

                        <TextView
                            android:fontFamily="@font/iransans"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="3dp"
                            android:text=":"
                            android:textSize="22dp" />

                        <TextView
                            android:fontFamily="@font/iransans"
                            android:id="@+id/Timer_min"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="3dp"
                            android:text="00"
                            android:textSize="22dp" />

                        <TextView
                            android:fontFamily="@font/iransans"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="3dp"
                            android:text=":"
                            android:textSize="22dp" />

                        <TextView
                            android:id="@+id/Timer_sec"
                            android:layout_width="wrap_content"
                            android:layout_height="17dp"
                            android:fontFamily="@font/iransans"
                            android:padding="1dp"
                            android:text="00"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_weight="0.5"
                        android:gravity="right"
                        android:padding="5dp">

                        <TextView
                            android:fontFamily="@font/iransans"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7dp"
                            android:text="شگفت انگیز"
                            android:textColor="#E91E63"
                            android:textSize="18dp" />

                        <TextView
                            android:fontFamily="@font/iransans"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="7dp"
                            android:layout_marginTop="7dp"
                            android:text="پیشنهاد"
                            android:textColor="#242121"
                            android:textSize="18dp" />


                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layoutDirection="rtl"
                android:scrollbars="none"
                tools:ignore="SpeakableTextPresentCheck">

                <LinearLayout
                    android:id="@+id/Lin_product_amazing"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layoutDirection="rtl"
                    android:orientation="horizontal"
                    android:padding="2dp">

                </LinearLayout>

            </HorizontalScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="8dp">


                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <ImageView
                        android:scaleType="fitCenter"
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:id="@+id/tabliq1" />


                </android.support.v7.widget.CardView>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="8dp"
                android:orientation="horizontal">


                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_height="wrap_content">


                    <ImageView
                        android:scaleType="fitCenter"
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                     android:id="@+id/tabliq2" />


                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_height="wrap_content">


                    <ImageView
                        android:scaleType="fitCenter"
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:id="@+id/tabliq3" />


                </android.support.v7.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="8dp">


                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <ImageView
                        android:scaleType="fitCenter"
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                       android:id="@+id/tabliq4" />


                </android.support.v7.widget.CardView>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">


                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_height="wrap_content">


                    <ImageView
                        android:scaleType="fitCenter"
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:id="@+id/tabliq5" />


                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_height="wrap_content">


                    <ImageView
                        android:scaleType="fitCenter"
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:id="@+id/tabliq6"/>


                </android.support.v7.widget.CardView>

            </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:padding="8dp">


                        <TextView
                            android:fontFamily="@font/iransans"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="0dp"
                            android:text="لیست کامل"
                            android:textColor="@color/color_text_blue_wihte"
                            android:textSize="16dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_weight="0.5"
                        android:gravity="right"
                        android:padding="8dp">


                        <TextView
                            android:fontFamily="@font/iransans"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="7dp"
                            android:layout_marginTop="10dp"
                            android:text="محصولات جدید"
                            android:textColor="#242121"
                            android:textSize="18dp" />



                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>
            <HorizontalScrollView
                android:layoutDirection="rtl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/Lin_Timer_product"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">


                </LinearLayout>

            </HorizontalScrollView>





            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:padding="8dp">


                        <TextView
                            android:fontFamily="@font/iransans"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="0dp"
                            android:text="لیست کامل"
                            android:textColor="@color/color_text_blue_wihte"
                            android:textSize="16dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_weight="0.5"
                        android:gravity="right"
                        android:padding="8dp">


                        <TextView
                            android:fontFamily="@font/iransans"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="7dp"
                            android:layout_marginTop="10dp"
                            android:text="پربازدیدترین ها"
                            android:textColor="#242121"
                            android:textSize="18dp" />



                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>
            <HorizontalScrollView
                android:layoutDirection="rtl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/Lin_View_product"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="8dp">


                </LinearLayout>

            </HorizontalScrollView>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:padding="8dp">


                        <TextView
                            android:textStyle="bold"
                            android:fontFamily="@font/iransans"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="0dp"
                            android:text="لیست کامل"
                            android:textColor="@color/color_text_blue_wihte"
                            android:textSize="16dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:gravity="right"
                        android:padding="8dp">


                        <TextView
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/iransans"
                            android:text=" پرفروش ترین ها "
                            android:textColor="#242121"
                            android:textSize="18dp" />



                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>
            <HorizontalScrollView
                android:layoutDirection="rtl"
                android:layout_marginBottom="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/Lin_sell_product"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="8dp">
                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>
</android.support.v4.widget.NestedScrollView>