<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context=".Activity.SignUp">
    <LinearLayout
        android:layout_weight=".9"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_gravity="center"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:gravity="center"
                android:text="DIGIKALA"
                android:textColor="#ffffff"
                android:background="@color/color_blue_very_BIERON"
                android:textSize="32sp" />
        </LinearLayout>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:textColor="#2f2f2f"
            card_view:cardCornerRadius="5dp"
            card_view:cardElevation="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="3dp">

                <TextView
                    android:foregroundTint="@color/colorAccent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_margin="5dp"
                    android:text="ثبت نام "
                    android:textColor="@color/colorAccent"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/Edt_Email_SignUp"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_gravity="top"
                        android:drawableRight="@drawable/email_gray"
                        android:fontFamily="@font/iransans"
                        android:gravity="top"
                        android:hint=" ایمیل"
                        android:inputType="textEmailAddress"
                        android:textSize="14dp" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp">

                    <EditText
                        android:id="@+id/Edt_Pass_SignUp"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:drawableRight="@drawable/lock_gray"
                        android:fontFamily="@font/iransans"
                        android:hint=" رمز عبور"
                        android:inputType="text"
                        android:textSize="14dp" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp">

                    <EditText
                        android:fontFamily="@font/iransans"
                        android:id="@+id/Edt_Pass_SignUp_rep"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:drawableRight="@drawable/lock_gray"
                        android:hint=" تکرار رمز عبور"
                        android:inputType="text"
                        android:textSize="14dp" />

                </android.support.design.widget.TextInputLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp" />
            </LinearLayout>

        </android.support.v7.widget.CardView>


    </LinearLayout>

    <LinearLayout
        android:layout_weight="-.0"
        android:id="@+id/Llt_CreateAccunt_SignUp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#2C75FE"
        android:gravity="center"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/Llt_Img_CreateAccunt_SignUp"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:src="@drawable/leftaaaaa" />

        <TextView
            android:fontFamily="@font/iransans"
            android:id="@+id/Llt_Txt_CreateAccunt_SignUp"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center"
            android:text=" ثبت نام در دیجیکالا "
            android:textColor="#ffffff" />


    </LinearLayout>

</LinearLayout>