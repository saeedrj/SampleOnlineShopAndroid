<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/Lin_product_amazing_linerLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layoutDirection="rtl"
    android:padding="2dp"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_gravity="right"
        app:cardCornerRadius="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp">


        <LinearLayout
            android:layout_width="170dp"
            android:layout_height="match_parent"
            android:background="@drawable/res"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="3dp">

            <ImageView
                android:id="@+id/Lin_product_amazing_img"
                android:layout_width="120dp"
                android:layout_height="110dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="4dp"
                android:src="@drawable/mobile1" />

            <TextView
                android:id="@+id/Lin_product_amazing_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:fontFamily="@font/iransans"
                android:gravity="center"
                android:lines="2"
                android:text="Huawei Honor Magic Dual SIM Mobile Phon"
                android:textColor="#3C3A3A"
                android:textSize="12dp" />







                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/Lin_product_amazing_pprice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="7dp"
                            android:fontFamily="@font/iransans"
                            android:text="24000"
                            android:textColor="#499E61"
                            android:textSize="12dp" />

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="7dp"
                            android:fontFamily="@font/iransans"
                            android:text="ريال"
                            android:textColor="#2E7D32"
                            android:textSize="12dp" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="27dp"
                        android:layout_gravity="left"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp">


                        <TextView
                            android:id="@+id/Lin_product_amazing_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="7dp"
                            android:fontFamily="@font/iransans"
                            android:text="24000"
                            android:textColor="#E91E63"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/Lin_product_amazing_price_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="7dp"
                            android:fontFamily="@font/iransans"
                            android:text="ريال"
                            android:textColor="#E91E63"
                            android:textSize="12dp" />

                    </LinearLayout>
                </LinearLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>